// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String  @id @default(uuid())
  username String
  email    String  @unique
  password String
  phone    String?
}

model Post {
  id        String   @id @default(cuid())
  userId    String  
  title     String
  content   String
  phone     String
  location  String
  prices    Json    
  perHour   Float
  perDay    Float
  perWeek   Float
  perMonth  Float
  perYear   Float
  images    Image[]  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id     String @id @default(cuid())
  url    String
  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
}